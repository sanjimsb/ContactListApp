<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:layout_marginStart">100dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="textStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="editTextStyling">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="phoneTextStyling">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="sipperField">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="floatingBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>]
    </style>

    <style name="contactName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="phoneNum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="phnType">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:textColor">#1A237E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="email">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">#2FA505</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="firstLetter">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
</resources>